doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Campeonato Robotica 
        style.
            * { 
                padding: 0; 
                box-sizing: border-box; 
                font-family:-apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
                margin: 0;
            }
            #header {
                width: 100%;
                height: 80px;
                background-color: #4949c6;
                color: #fff;
                display: flex;
                align-items: center;
                padding-left: 30px;
            }
            .navbar {
                display: flex;
                width: 100%;
                align-items: center;
                justify-content: space-between;
            }
            .containerRight {
                display: flex;
                flex-direction: column;
                gap: 5px;
                margin-right: 30px;
            }
            .containerRight > button {
                padding: 5px;
                background: #fff;
                border: none;
                border-radius: 15px;
                transition: background .3s ease;
                cursor: pointer;
            }
            .containerRight > button:hover {
                background: #babaf0;
            }      
            .titlePage {
                color: #fff;
                font-size: 32px;
                text-decoration: none;
                font-weight: bold;
            }      
            .titleContenedor {
                color: #4949c6;
                font-size: 35px;
                margin-bottom: 1.2rem;
                text-align: center;
                margin-top: 2rem;
            }
            form {
                width: 450px;
                padding: 8px;
                background-color: #4949c6;
                border-radius: 8px;
                display: flex;
                flex-direction: column;
                align-items: center;
                margin: auto;                
            }
            form > input {
                outline: none;
                padding: 12px;
                width: 310px;
                border: none;
                border-radius: 8px;
                margin-bottom: 1rem;
            }

            form > button {
                outline: none;
                padding: 8px;
                width: 120px;
                border: none;
                border-radius: 8px;
                color:  #4949c6;
                cursor: pointer;
                font-weight: 500;
            }
        
        script(type='text/javascript').
            const checkRol = JSON.parse(localStorage.getItem('usuario'));
            if(!checkRol?.logeado) window.location.replace('/login');


    body 
        header#header   
            .navbar 
                a.titlePage(href='/') Campeonato Robotica
                .containerRight
                    p   Bienvenido 
                        script document.write(checkRol.nombre)
                    button#logoutBtn Cerrar sesion          
        h2.titleContenedor Agregar Opinión
        form#registrarOpinion
            input(type='text' id="opinion" required name='opinion' placeholder="Qué opinas del torneo ?")
            input(type='text' id="expectativa" required name='expectativa' placeholder="Qué expectativa tenías del torneo ?")
            input(type='number' min="1" max="10" id="puntuacion" required name='puntuacion' placeholder="Del 1 al 10 cómo calificas el torneo ?")
            button Guardar
        script(src="./js/logicaFormularios.js")
        
         
